#include <iostream>
#include <random>

using namespace std;

int main() {
    int playerScore = 0;
    int dealerScore = 0;
    bool n = true;

    default_random_engine generator;
    uniform_int_distribution<int> distribution(2,11);

    while(n) {
        playerScore+=distribution(generator);
        cout<<"Your score: "<<playerScore<<endl<<"Draw a card? Yes:1 / No:0"<<endl;
        int check;
        cin>>check;
        switch(check) {
            case 1:
                break;
            case 0:
                n = false;
                break;        
        }
    }
    
    dealerScore = distribution(generator) * 5;

    if(playerScore <= 21 && playerScore > dealerScore && dealerScore <= 21) {
        cout<<"You win!\nYour score: "<<playerScore<<"\nDealer score: "<<dealerScore<<"\n";
    }
    else {
        cout<<"You lose\nYour score: "<<playerScore<<"\nDealer score: "<<dealerScore<<"\n";
    }
    if(playerScore <= 21 && dealerScore > 21) {
        cout<<"You win!\nYour score: "<<playerScore<<"\nDealer score: "<<dealerScore<<"\n";
    }

    return 0;
}
