#include <iostream>
#include <string>

using namespace std;

int findIncoming(char *str, char symbol){
  int count = 0;
  char *p = str;
  for(;*p!=0;p++){
    if(*p==symbol){
      count++;
    }
  }
  return count;
}

int main(){
  char str[20];
  char symbol;
  cout<<"Enter the string:\n";
  cin>>str;
  cout<<"Enter the symbol:\n";
  cin>>symbol;
  cout<<"Number of incoming: "<<findIncoming(str, symbol);

  return 0;
}
